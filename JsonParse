package com.kk.org;

import com.fasterxml.jackson.annotation.JsonIgnoreProperties;
import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.databind.ObjectMapper;

import java.io.File;
import java.util.List;

public class JsonParserExample {

	public static void main(String[] args) throws Exception {
				
		// Path to your JSON file
        File jsonFile = new File("getuserTickets.json");

		ObjectMapper mapper = new ObjectMapper();
		TicketResponse response = mapper.readValue(jsonFile, TicketResponse.class);

		System.out.println("Result Description: " + response.getResult().getResultDescrption());
		System.out.println(
				"Ticket Number: " + response.getAutoProvisionTickets().get(0).getTicketDetails().get(0).getValue());
		System.out.println("TicketAttributes: "
				+ response.getAutoProvisionTickets().get(0).getTicketAttributes().get(0).getValue());
	}
}

@JsonIgnoreProperties(ignoreUnknown = true)
class TicketResponse {

	@JsonProperty("Result")
	private Result result;

	@JsonProperty("AutoProvisionTickets")
	private List<AutoProvisionTicket> autoProvisionTickets;

	public Result getResult() {
		return result;
	}

	public void setResult(Result result) {
		this.result = result;
	}

	public List<AutoProvisionTicket> getAutoProvisionTickets() {
		return autoProvisionTickets;
	}

	public void setAutoProvisionTickets(List<AutoProvisionTicket> autoProvisionTickets) {
		this.autoProvisionTickets = autoProvisionTickets;
	}
}

@JsonIgnoreProperties(ignoreUnknown = true)
class Result {

	@JsonProperty("ResultCode")
	private int resultCode;

	@JsonProperty("ResultDescrption")
	private String resultDescrption;

	@JsonProperty("TotalTickets")
	private int totalTickets;

	public int getResultCode() {
		return resultCode;
	}

	public void setResultCode(int resultCode) {
		this.resultCode = resultCode;
	}

	public String getResultDescrption() {
		return resultDescrption;
	}

	public void setResultDescrption(String resultDescrption) {
		this.resultDescrption = resultDescrption;
	}

	public int getTotalTickets() {
		return totalTickets;
	}

	public void setTotalTickets(int totalTickets) {
		this.totalTickets = totalTickets;
	}
}

@JsonIgnoreProperties(ignoreUnknown = true)
class AutoProvisionTicket {

	@JsonProperty("TicketDetails")
	private List<KeyValue> ticketDetails;

	@JsonProperty("Requestor")
	private List<KeyValue> requestor;

	@JsonProperty("TargetUser")
	private List<KeyValue> targetUser;

	@JsonProperty("TicketAttributes")
	private List<KeyValue> ticketAttributes;

	public List<KeyValue> getTicketDetails() {
		return ticketDetails;
	}

	public void setTicketDetails(List<KeyValue> ticketDetails) {
		this.ticketDetails = ticketDetails;
	}

	public List<KeyValue> getRequestor() {
		return requestor;
	}

	public void setRequestor(List<KeyValue> requestor) {
		this.requestor = requestor;
	}

	public List<KeyValue> getTargetUser() {
		return targetUser;
	}

	public void setTargetUser(List<KeyValue> targetUser) {
		this.targetUser = targetUser;
	}

	public List<KeyValue> getTicketAttributes() {
		return ticketAttributes;
	}

	public void setTicketAttributes(List<KeyValue> ticketAttributes) {
		this.ticketAttributes = ticketAttributes;
	}
}

@JsonIgnoreProperties(ignoreUnknown = true)
class KeyValue {
	
	@JsonProperty("key")
	private String key;
	
	@JsonProperty("value")
	private String value;

	public String getKey() {
		return key;
	}

	public void setKey(String key) {
		this.key = key;
	}

	public String getValue() {
		return value;
	}

	public void setValue(String value) {
		this.value = value;
	}
}
